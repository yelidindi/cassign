#include <stdio.h>

int main() {
    int a[100][100];
    int i,r,j,c,sum,col;
    printf("Enter how many rows\n");
    scanf("%d",&r);
    printf("Enter how many cols\n");
    scanf("%d",&c);
    printf("Enter elements into array\n");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
        scanf("%d",&a[i][j]);
        }
    }
    printf("enter column number");
    scanf("%d",&col);
    col=col-1;
    for(i=0;i<r;i++)
    {
        sum=sum+a[i][j];
    }
    printf("%d column sum=%d\n",col+1,sum);
    return 0;
}
